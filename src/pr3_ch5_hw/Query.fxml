<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pr3_ch5_hw.QueryController">
   <children>
      <FlowPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../style1.css">
         <children>
            <VBox prefHeight="400.0" prefWidth="601.0">
               <children>
                  <HBox prefHeight="305.0" prefWidth="601.0">
                     <children>
                        <TableView fx:id="ttTableView" nodeOrientation="LEFT_TO_RIGHT" prefHeight="303.0" prefWidth="400.0">
                          <columns>
                            <TableColumn fx:id="ttcID" prefWidth="95.0" text="ID" />
                            <TableColumn fx:id="ttcName" prefWidth="94.0" text="Name" />
                              <TableColumn fx:id="ttcMajor" prefWidth="99.0" text="Major" />
